<%- include('partials/header') -%>
<h1 class="text-center">Edit Individual Climb</h1>
<form action="/post/finalizeEditIndividual/<%= climb._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="typeOfClimb" class="form-label">Type Of Climb</label>
        <select id="typeOfClimb" name="typeOfClimb">
          <option value="Bouldering" <%= (climb.typeOfClimb === 'Bouldering') ? 'selected' : '' %>>Bouldering</option>
          <option value="Routes" <%= (climb.typeOfClimb === 'Routes') ? 'selected' : '' %>>Routes</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="Difficulty" class="form-label">Difficulty</label>
        <input type="range" class="form-control" id="Difficulty" min="0" max="11" name="Difficulty" oninput="updateDifficultyValue()" value="<%= climb.difficulty %>">
        <span id="DifficultyValue">Drag The Slider To Choose Climbing Difficulty</span>
        <input type="hidden" id="DifficultyInput" name="Difficulty">
      </div>    
      <div class="mb-3">
        <label for="Attempts" class="form-label">Attempts?</label>
        <input type="range" class="form-control" id="Attempts" min="1" max="15"  name="Attempts" oninput="updateAttemptsValue()" value="<%= climb.attempts %>">
        <span id="AttemptsValue">Drag The Slider To Choose Your Attempts</span>
      </div>
      <div class="mb-3">
        <legend>Top?</legend>
        <input type="checkbox" id="Yes" name="TopYes" <%= climb.top ? 'checked' : '' %>>
        <label for="Yes">Yes</label>
        <input type="checkbox" id="No" name="TopNo" <%= !climb.top ? 'checked' : '' %>>
        <label for="No">No</label>
      </div>
      <div class="mb-3">
        <label for="imgUpload" class="form-label">Image/Video</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
      <div class="mb-3" id="keywords">
        <label><input type="checkbox" name="Keywords" value="OnSight" <%= climb.tags.includes('OnSight') ? 'checked' : '' %>>On Sight</label>
        <label><input type="checkbox" name="Keywords" value="Flash" <%= climb.tags.includes('Flash') ? 'checked' : '' %>>Flash</label>
        <label><input type="checkbox" name="Keywords" value="Slopers" <%= climb.tags.includes('Slopers') ? 'checked' : '' %>>Slopers</label>
        <label><input type="checkbox" name="Keywords" value="Crimpy" <%= climb.tags.includes('Crimpy') ? 'checked' : '' %>>Crimpy</label>
        <label><input type="checkbox" name="Keywords" value="Juggy" <%= climb.tags.includes('Juggy') ? 'checked' : '' %>>Juggy</label>
        <label><input type="checkbox" name="Keywords" value="Overhanging" <%= climb.tags.includes('Overhanging') ? 'checked' : '' %>>Overhanging</label>
        <label><input type="checkbox" name="Keywords" value="Static" <%= climb.tags.includes('Static') ? 'checked' : '' %>>Static</label>
        <label><input type="checkbox" name="Keywords" value="Dynamic" <%= climb.tags.includes('Dynamic') ? 'checked' : '' %>>Dynamic</label>
        <label><input type="checkbox" name="Keywords" value="Dyno" <%= climb.tags.includes('Dyno') ? 'checked' : '' %>>Dyno</label>
        <label><input type="checkbox" name="Keywords" value="Pockets" <%= climb.tags.includes('Pockets') ? 'checked' : '' %>>Pockets</label>
        <label><input type="checkbox" name="Keywords" value="Gaston" <%= climb.tags.includes('Gaston') ? 'checked' : '' %>>Gaston</label>
     </div>
    <div class="mb-3">
    <label for="Notes" class="form-label">Notes</label>
    <textarea class="form-control" id="Notes" name="Notes"><%= climb.notes %></textarea>
    </div>
    <button type="submit" class="btn btn-primary" value="Update Climb">Update Climb</button>
    <a href="/session" class="btn btn-primary">Cancel</a>
</form>
<%- include('partials/footer') -%>
  